{
  "name": "@vasilistotskas/grooveshop-media-stream",
  "version": "1.85.0",
  "private": false,
  "description": "Grooveshop Media Stream",
  "repository": {
    "type": "git",
    "url": "https://github.com/vasilistotskas/grooveshop-media-stream.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vasilistotskas/grooveshop-media-stream/issues"
  },
  "homepage": "https://github.com/vasilistotskas/grooveshop-media-stream#readme",
  "files": [
    "build/dist/**/*"
  ],
  "scripts": {
    "prebuild": "rimraf build/dist",
    "build": "nest build",
    "start": "nest start",
    "dev": "nest start --tsc --watch",
    "dev:all": "ncu -u && bun i && bun run build && bun run lint:fix && bun run dev",
    "debug": "nest start --debug --watch",
    "prod": "node build/dist/main",
    "repl": "nest start --watch --entryFile repl",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --coverage && coveralls < coverage/lcov.info",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "semantic-release": "semantic-release"
  },
  "dependencies": {
    "@nestjs/axios": "3.0.3",
    "@nestjs/common": "10.4.4",
    "@nestjs/core": "10.4.4",
    "@nestjs/mapped-types": "2.0.5",
    "@nestjs/platform-express": "10.4.4",
    "@nestjs/schedule": "^4.1.1",
    "@nestjs/serve-static": "^4.0.2",
    "axios": "1.7.7",
    "express": "4.21.0",
    "lodash": "4.17.21",
    "module-alias": "2.2.3",
    "reflect-metadata": "0.2.2",
    "rimraf": "6.0.1",
    "rxjs": "7.8.1",
    "sharp": "0.33.5",
    "uuid": "10.0.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.7.1",
    "@nestjs/cli": "10.4.5",
    "@nestjs/schematics": "10.1.4",
    "@nestjs/testing": "10.4.4",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/commit-analyzer": "13.0.0",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/github": "10.3.5",
    "@semantic-release/npm": "12.0.1",
    "@semantic-release/release-notes-generator": "14.0.1",
    "@swc/cli": "0.4.0",
    "@swc/core": "1.7.26",
    "@types/express": "4.17.21",
    "@types/jest": "29.5.13",
    "@types/lodash": "4.17.9",
    "@types/node": "22.6.1",
    "@types/potrace": "^2.1.5",
    "@types/supertest": "6.0.2",
    "@types/uuid": "10.0.0",
    "coveralls": "3.1.1",
    "eslint": "9.11.1",
    "jest": "29.7.0",
    "semantic-release": "24.1.1",
    "source-map-support": "0.5.21",
    "supertest": "7.0.0",
    "ts-jest": "29.2.5",
    "ts-loader": "9.5.1",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.6.2"
  },
  "publishConfig": {
    "@vasilistotskas:registry": "https://npm.pkg.github.com"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "package.json"
          ],
          "message": "chore(release): ${nextRelease.version}\n\n${nextRelease.notes}"
        }
      ],
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": "dist",
              "label": "Distribution"
            }
          ]
        }
      ],
      [
        "@semantic-release/npm",
        {
          "npmPublish": false,
          "tarballDir": "dist"
        }
      ]
    ]
  },
  "engines": {
    "node": ">=22.8.0",
    "npm": ">=10.8.2"
  },
  "_moduleAliases": {
    "@microservice": "./build/dist"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
