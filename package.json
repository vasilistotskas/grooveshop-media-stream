{
  "name": "@vasilistotskas/grooveshop-media-stream",
  "version": "1.127.0",
  "private": false,
  "description": "Grooveshop Media Stream",
  "repository": {
    "type": "git",
    "url": "https://github.com/vasilistotskas/grooveshop-media-stream.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vasilistotskas/grooveshop-media-stream/issues"
  },
  "homepage": "https://github.com/vasilistotskas/grooveshop-media-stream#readme",
  "files": [
    "build/dist/**/*"
  ],
  "scripts": {
    "prebuild": "rimraf build/dist",
    "build": "nest build",
    "start": "nest start",
    "dev": "nest start --tsc --watch",
    "dev:all": "ncu -u && pnpm i && pnpm run build && pnpm run lint:fix && pnpm run dev",
    "debug": "nest start --debug --watch",
    "prod": "node build/dist/main",
    "repl": "nest start --watch --entryFile repl",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --coverage && coveralls < coverage/lcov.info",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "semantic-release": "semantic-release"
  },
  "dependencies": {
    "@nestjs/axios": "4.0.0",
    "@nestjs/cli": "11.0.7",
    "@nestjs/common": "11.1.0",
    "@nestjs/core": "11.1.0",
    "@nestjs/mapped-types": "2.1.0",
    "@nestjs/platform-express": "11.1.0",
    "@nestjs/schedule": "6.0.0",
    "@nestjs/serve-static": "5.0.3",
    "axios": "1.9.0",
    "express": "5.1.0",
    "module-alias": "2.2.3",
    "reflect-metadata": "0.2.2",
    "rimraf": "6.0.1",
    "rxjs": "7.8.2",
    "sharp": "0.34.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "4.12.0",
    "@jest/globals": "29.7.0",
    "@nestjs/schematics": "11.0.5",
    "@nestjs/testing": "11.1.0",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/commit-analyzer": "13.0.1",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/github": "11.0.2",
    "@semantic-release/npm": "12.0.1",
    "@semantic-release/release-notes-generator": "14.0.3",
    "@swc/cli": "0.7.3",
    "@swc/core": "1.11.22",
    "@types/express": "5.0.1",
    "@types/jest": "29.5.14",
    "@types/node": "22.15.3",
    "@types/potrace": "2.1.5",
    "@types/supertest": "6.0.3",
    "coveralls": "3.1.1",
    "eslint": "9.25.1",
    "jest": "29.7.0",
    "semantic-release": "24.2.3",
    "source-map-support": "0.5.21",
    "supertest": "7.1.0",
    "ts-jest": "29.3.2",
    "ts-loader": "9.5.2",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.8.3"
  },
  "publishConfig": {
    "@vasilistotskas:registry": "https://npm.pkg.github.com"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "package.json"
          ],
          "message": "chore(release): ${nextRelease.version}\n\n${nextRelease.notes}"
        }
      ],
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": "dist",
              "label": "Distribution"
            }
          ]
        }
      ],
      [
        "@semantic-release/npm",
        {
          "npmPublish": false,
          "tarballDir": "dist"
        }
      ]
    ]
  },
  "_moduleAliases": {
    "@microservice": "./build/dist"
  },
  "packageManager": "pnpm@10.10.0",
  "pnpm": {
    "onlyBuiltDependencies": [
      "@nestjs/core",
      "@swc/core",
      "sharp"
    ]
  }
}
