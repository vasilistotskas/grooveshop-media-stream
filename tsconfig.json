{
  "compilerOptions": {
    "module": "CommonJS",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "target": "ESNext",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "sourceMap": true,
    "outDir": "./build/dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "paths": {
      "@microservice/*": [
        "src/MediaStream/*"
      ],
      "@storage/*": [
        "var/*"
      ]
    },
    "typeRoots": [
      "node_modules/@types",
      "typings.d.ts"
    ]
  },
  "watchOptions": {
    "watchFile": "dynamicPriorityPolling",
    "watchDirectory": "dynamicPriorityPolling",
    "excludeDirectories": ["**/node_modules", "dist", "build"],
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "build"
  ],
  "files": [
    "typings.d.ts"
  ]
}
