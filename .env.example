# Docker Configuration
COMPOSE_PROJECT_NAME=grooveshop-media-stream
LAUNCH_AS=HYBRID

# Server Configuration
NODE_ENV=development
PORT=3003
HOST=0.0.0.0

# CORS Configuration
CORS_ORIGIN=*
CORS_METHODS=GET
CORS_MAX_AGE=86400

# Memory Cache Configuration
CACHE_MEMORY_MAX_SIZE=104857600
CACHE_MEMORY_TTL=3600
CACHE_MEMORY_CHECK_PERIOD=600

# Redis Cache Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=7200
REDIS_MAX_RETRIES=3
REDIS_RETRY_DELAY=100

# File Cache Configuration
CACHE_FILE_DIRECTORY=./storage
CACHE_FILE_MAX_SIZE=1073741824
CACHE_FILE_CLEANUP_INTERVAL=3600

# Processing Configuration
PROCESSING_MAX_CONCURRENT=10
PROCESSING_TIMEOUT=30000
PROCESSING_RETRIES=3
PROCESSING_MAX_FILE_SIZE=10485760
PROCESSING_ALLOWED_FORMATS=jpg,jpeg,png,webp,gif,svg

# Queue Configuration
QUEUE_IMAGE_PROCESSING_CONCURRENCY=10
QUEUE_CACHE_WARMING_CONCURRENCY=3
QUEUE_CACHE_CLEANUP_CONCURRENCY=1

# Monitoring Configuration
MONITORING_ENABLED=true
MONITORING_METRICS_PORT=9090
MONITORING_HEALTH_PATH=/health
MONITORING_METRICS_PATH=/metrics

# External Services Configuration
NEST_PUBLIC_DJANGO_URL=http://localhost:8000
NEST_PUBLIC_NUXT_URL=http://localhost:3000
EXTERNAL_REQUEST_TIMEOUT=30000
EXTERNAL_MAX_RETRIES=3

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT_WINDOW_MS=60000
RATE_LIMIT_DEFAULT_MAX=500
RATE_LIMIT_IMAGE_PROCESSING_WINDOW_MS=60000
RATE_LIMIT_IMAGE_PROCESSING_MAX=300
RATE_LIMIT_HEALTH_CHECK_WINDOW_MS=10000
RATE_LIMIT_HEALTH_CHECK_MAX=1000
RATE_LIMIT_BYPASS_HEALTH_CHECKS=true
RATE_LIMIT_BYPASS_METRICS_ENDPOINT=true
RATE_LIMIT_BYPASS_STATIC_ASSETS=true
RATE_LIMIT_BYPASS_WHITELISTED_DOMAINS=example.com,*.example.com
RATE_LIMIT_BYPASS_BOTS=true

# Coveralls
COVERALLS_REPO_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
